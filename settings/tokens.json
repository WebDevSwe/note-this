{
  "meta": {
    "version": "1.0",
    "description": "Token configuration for NoteThis"
  },

  "globals": {
    "APP": "NoteThis",
    "USER": "Tobias"
  },

  "tokens": {
    "date": {
      "TODAY": {
        "source": "date",
        "format": "%Y-%m-%d"
      },
      "TODAY_ISO": {
        "source": "date",
        "format": "%Y-%m-%d"
      },
      "TODAY_HUMAN": {
        "source": "date",
        "format": "%-d %b %Y",
        "locale": "sv_SE"
      },
      "YEAR": {
        "source": "date",
        "format": "%Y"
      },
      "WEEK": {
        "source": "date",
        "format": "%V"
      },
      "WEEKDAY": {
        "source": "date",
        "format": "%A",
        "locale": "sv_SE"
      }
    },

    "time": {
      "NOW": {
        "source": "time",
        "format": "%H:%M"
      },
      "NOW_FULL": {
        "source": "datetime",
        "format": "%Y-%m-%d %H:%M"
      }
    },

    "system": {
      "HOST": {
        "source": "hostname"
      },
      "NOTE_ID": {
        "source": "note_id"
      }
    },

    "lifecycle": {
      "CREATED_AT": {
        "source": "created_at",
        "format": "%Y-%m-%d %H:%M"
      },
      "UPDATED_AT": {
        "source": "updated_at",
        "format": "%Y-%m-%d %H:%M"
      }
    }
  }
}
